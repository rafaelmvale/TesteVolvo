@model TesteVolvo.Application.DTOs.TruckDTO

<h2>Register new Truck</h2>

<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <hr/>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="YearManufacture" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="YearManufacture" class="form-control" />
                <span asp-validation-for="YearManufacture" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="YearModel" class="col-md-2 control-label"></label>
